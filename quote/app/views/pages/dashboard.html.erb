<h1>Quotables</h1>

<p>Hi <%= @current_user.username %></p>
<hr/>

<main>
  <article>

    <h1>Timeline</h1>

    <% @quotables.each do |quote| %>
      <div class="quotable">
        <%= quote.content %>
        <p class="meta">
          <em><%= quote.user.username %> - <%= distance_of_time_in_words_to_now quote.created_at %> ago</em>
        </p>
      </div>
    <% end %>
  </article>

  <aside>

<h4>People You Follow</h4>

<ul>
  <% @current_user.following_users.each do |user| %>
    <li>
      <%= user.username %>
      <%= link_to 'Unfollow', unfollow_path(id: user.id), method: :delete %>
    </li>
  <% end %>
</ul>

<h4>Other People You might Find interesting</h4>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.username %>
      <%= link_to "Follow this user", follow_path(id: user.id), method: :post %>
    </li>
  <% end %>
</ul>
</aside>
</main>
